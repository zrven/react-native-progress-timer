{
    "name": "react-native-progress-timer",
    "version": "1.0.2",
    "description": "React Native Timer component with progress indicators",
    "main": "index.js",
    "scripts": {
        "format": "npx prettier --write ./*.js ./*.json",
        "lint": "npx eslint *.js",
        "test": "jest --config jest.config.json",
        "prepublish": "npm test && npm run lint",
        "postversion": "git push && git push --tags"
    },
    "jest": {
        "preset": "react-native",
        "transformIgnorePatterns": [
            "node_modules/(?!(jest-)?!(react-native|react-native-progress-timer|react-native-button|@react-navigation|moment/.*)/)"
        ]
    },
    "keywords": [
        "react-native",
        "react-native-component",
        "react",
        "mobile",
        "react-native-progress-timer",
        "timer",
        "progress"
    ],
    "homepage": "https://github.com/zrven/react-native-progress-timer",
    "repository": {
        "type": "git",
        "url": "https://github.com/zrven/react-native-progress-timer"
    },
    "author": "Raghav Chidella",
    "license": "ISC",
    "dependencies": {
        "moment": "^2.24.0",
        "moment-duration-format": "^2.3.2",
        "prop-types": "^15.7.2",
        "react-native-timer": "^1.3.6"
    },
    "devDependencies": {
        "@babel/core": "^7.20.7",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-react": "^7.18.6",
        "babel-jest": "^29.3.1",
        "eslint": "^8.30.0",
        "eslint-plugin-react": "^7.31.11",
        "jest": "^29.3.1",
        "jslint": "^0.12.1",
        "prettier": "^2.8.1",
        "react": ">= 17.0.2",
        "react-native": ">=0.64.0",
        "react-test-renderer": "^18.1.0"
    }
}
